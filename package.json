    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/commander": "^2.12.5",
    "@types/inquirer": "^9.0.8",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.0.13",
    "semantic-release": "^24.2.6",
