{
  "name": "smart-run",
  "version": "1.0.0",
  "description": "AI-powered interactive CLI for running package scripts with intelligent grouping and descriptions",
  "main": "dist/index.js",
  "bin": {
    "smart-run": "dist/cli.js",
    "srun": "dist/cli.js",
    "sr": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node --test",
    "lint": "biome check --write",
    "lint:check": "biome check",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint:check",
    "postinstall": "node dist/postinstall.js || true"
  },
  "keywords": [
    "cli",
    "npm",
    "scripts",
    "menu",
    "interactive",
    "package-manager",
    "pnpm",
    "bun",
    "yarn",
    "task-runner",
    "ai-powered",
    "smart",
    "automation",
    "developer-tools"
  ],
  "author": "Steven Pribilinskiy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/steven-pribilinskiy/smart-run.git"
  },
  "bugs": {
    "url": "https://github.com/steven-pribilinskiy/smart-run/issues"
  },
  "homepage": "https://github.com/steven-pribilinskiy/smart-run#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "inquirer": "^12.7.0",
    "openai": "^4.20.0",
    "clipboardy": "^4.0.0",
    "dotenv": "^16.3.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@types/inquirer": "^9.0.7",
    "@biomejs/biome": "^2.0.0",
    "typescript": "^5.0.0",
    "semantic-release": "^22.0.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/commit-analyzer": "^11.0.0",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^9.0.0",
    "@semantic-release/npm": "^11.0.0",
    "@semantic-release/release-notes-generator": "^12.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
